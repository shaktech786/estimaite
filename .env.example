# EstimAIte Environment Configuration

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Pusher Configuration
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Public Pusher Configuration (for client-side)
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# Resend Email Service Configuration
RESEND_API_KEY=your_resend_api_key_here
FEEDBACK_EMAIL=your-email@domain.com
FROM_EMAIL=noreply@yourdomain.com

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Configuration
NODE_ENV=development

# Node.js 23 Performance Optimizations
NODE_OPTIONS="--enable-source-maps --no-warnings=ExperimentalWarning"

# Optional: Rate limiting configuration
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW_MS=900000

# WebSocket Configuration
WS_PORT=3001
